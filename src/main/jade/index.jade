!!! 5
html
  head
    meta(charset='utf-8')
    meta(name='description', content='Cloud Former')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    title CloudFormerVisualizer
    // build:css styles/main.css 
    link(rel='stylesheet', href='styles/main.css')
    // endbuild 
  body
    nav(role="navigation").navbar.navbar-inverse.navbar-fixed-top
        .navbar-header
            button(type="button", data-toggle="collapse", data-target=".navbar-ex1-collapse").navbar-toggle
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a(href="#").navbar-brand CloudFormerVisualizer
        .collapse.navbar-collapse.navbar-ex1-collapse
            ul.nav.navbar-nav
                li.active: a(href="#") Main
    .container
        .row
            #inputForm.col-xs-12.col-sm-12.col-md-12.col-lg-12
                form.form-horizontal(action='#', role='form')
                    .form-group
                        legend Input CloudFormer JSON
                      | 
                    .form-group
                        label(for="json").col-sm-2.control-label CloudFormer JSON
                        .col-sm-10
                            textarea(name="json", id="json", rows=10, required="required").form-control
                    .form-group
                        .col-sm-10.col-sm-offset-2
                            button.btn.btn-primary(id="visualizeBtn", type='button') Visualize
        section#result
            .page-header
                h4 Result
            .row
                #graphArea.col-xs-8.col-sm-8.col-md-8.col-lg-8
                #nodeArea.col-xs-4.col-sm-4.col-md-4.col-lg-4
                    h3 Node Information
                    .well.well-sm
                        p#nodeInformationArea
    // build:js scripts/index.js 
    script(type="text/javascript", src="bower_components/underscore/underscore-min.js")
    script(type="text/javascript", src="bower_components/d3/d3.min.js")
    script(type="text/javascript", src="bower_components/jquery/jquery.min.js")
    script(src='scripts/index.js')
    script(src='scripts/analytics.js')
    // endbuild 



